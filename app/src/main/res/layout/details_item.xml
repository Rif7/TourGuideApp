<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/details_item_height">

    <ImageView
        android:id="@+id/details_item_icon"
        android:layout_width="@dimen/details_item_icon_size"
        android:layout_height="@dimen/details_item_icon_size"
        android:layout_margin="@dimen/details_item_margin"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <TextView
        android:text="Informations"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:id="@+id/details_item_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/details_item_margin"/>


</LinearLayout>